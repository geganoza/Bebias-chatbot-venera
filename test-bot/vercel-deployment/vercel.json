{
  "name": "bebias-test-bot",
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],

  "build": {
    "env": {
      "NEXT_PUBLIC_ENV": "test"
    }
  },

  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_ENV": "test",
    "USE_TEST_INSTRUCTIONS": "true"
  },

  "routes": [
    {
      "src": "/test-chat",
      "dest": "/test-bot/simulator/index.html"
    }
  ]
}